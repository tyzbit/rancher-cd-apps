apiVersion: v1
kind: Service
metadata:
  name: nextcloud
spec:
  type: LoadBalancer
  selector:
    app: nextcloud
  ports:
    - name: http
      protocol: TCP
      port: 80
      targetPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: nextcloud-cache
spec:
  type: NodePort
  selector:
    app: nextcloud-cache
  ports:
    - name: redis
      protocol: TCP
      port: 6379
      targetPort: 6379